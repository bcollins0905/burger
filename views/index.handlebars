<h1>Eat Da Burger!</h1>

<h2>Ordered Burgers!</h2>

<div class="row">
        <div class="col-sm-6">
            <h2 class="text-center red_font">Burgers Ordered</h2>
            <ul>
                {{#each burgers}} {{#unless devoured}}
                <li>
                    {{id}}.{{burger_name}}
                    <button class="change-devoured btn-lg" data-id="{{this.id}}" data-newdevoured="{{devoured}}">
                        {{#if devoured}}Eat Again{{else}}Devour It!{{/if}}
                    </button>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <h2 class="text-center red_font" >Burgers Eaten</h2>
            <ul>
                {{#each burgers}} {{#if devoured}}
                <li>
                    {{id}}.{{burger_name}}
                    <button class="change-devoured btn-lg" data-id="{{this.id}}" data-newdevoured="{{devoured}}">
                        {{#if devoured}}Eat Again{{else}}Devour It!{{/if}}
                    </button>
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Order a Burger:</label>
    <input type="text" id="ca" burger_name="name">
  </div>



  <button type="submit">Add Burger</button>
</form>
